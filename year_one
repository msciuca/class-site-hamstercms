  <div id="cmdArea">
    Enter command:<input type="text" id="command" maxlength="1" autofocus>
  </div>
  <script>
    document.getElementById('command').addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        const cmd = this.value.trim();
        const routes = {
          '0': '/', '1': '/year1', '2': '/year2', '3': '/resources', '4': '/calendar', '5': '/about', '6': '/showcase',
          '7': '/year1/q1', '8': '/year1/q2', '9': '/year1/q3'
        };
        if (routes[cmd]) window.location.href = routes[cmd];
        if (cmd === '0') window.location.href = '/year1/q4';
      }
    });
  </script>
